<h1>Edit Pokemon</h1>

<form action="/pokemon/<%=@pokemon.id%>" method="post">
  <input type="hidden" name="_method" value="put">

  <h3> Name : </h3>
  <input type="text" name="pokemon[name]" value="<%= @pokemon.name %>">

  <h3>CP : </h3>
  <input type="num" name="pokemon[cp]" value="<%= @pokemon.cp %>">

  <h3>Poke Type : </h3>
  <input type="text" name="pokemon[poke_type]" value="<%= @pokemon.poke_type %>">
  <input type="submit" value = "Edit">

</form>

<h2> Delete <%= @pokemon.name %> ? </h2>

<form action="/pokemon/<%= @pokemon.id %>" method="post">
  <input type="hidden" name="_method" value="delete">

  <input type="submit" name="" value="Delete">

</form>

<h2><a href="/pokemon">Go Back to Main Page</a></h2>
